<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SB FLiX 'N Chill</title>
    <title>@ViewBag.Title - SB FLiX 'N Chill</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-6">
                <div class="logo">
                    <h1><a href="#">FLiX 'N' <span>CHiLL</span></a></h1>
                </div>
            </div>
            @*<div class="col-md-6 col-sm-6 col-xs-6">
                    <div class="account">
                        <button type="button" class="btn btn-secondary btn-lg">@Html.ActionLink("CART", "Index", "Cart")</button>
                    </div>
                </div>*@
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
                @Html.Partial("_LoginPartial")
            </div>

            <div class="col-md-12">
                <div class="nav-menus">
                    <button type="button" class="btn btn-secondary btn-lg">@Html.ActionLink("Home", "Index", "Home")</button>
                    @*<button type="button" class="btn btn-secondary btn-lg"><a class="nav-link" href="#Movies">Movies</a></button>*@
                    @if (User.Identity.IsAuthenticated)
                    {
                        <button type="button" class="btn btn-secondary btn-lg">@Html.ActionLink("Movies", "Index", "Movie")</button>
                    }
                </div>
            </div>
        </div>
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-6 col-sm-6 "></div>
                </div>
            </div>
            <p>&copy; @DateTime.Now.Year - SB FLiX 'N' Chill</p>
            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<style>

    body {
        padding-top: 50px;
        padding-bottom: 20px;
        background-image: url('../../Images/MovieBackground.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
    }

    /*Details page to buy tickets*/ 
    body {
        margin: 0;
        padding-bottom: 20px;
        font-family: 'Roboto Condensed', sans-serif;
        font-size: 19px;
        line-height: 16px;
        color:silver;
        overflow-x: hidden;
        scrollbar-face-color: #121212;
    }

    h1,
    h2 {
        font-family: 'Roboto Condensed', sans-serif;
    }

    .MovieInfo {
        color: #777;
        border-radius: 100px;
    }

    .MovieInfo_Thumbnail {
        background-color: black;
        border-radius: 10px;
        font-family: 'Microsoft Sans Serif';
    }

    .btn btn-primary btn-large {
        background-color: black;
    }

    .

    .nav navbar-nav navbar-right {
    }

    /* [3. LOGO] */
    .logo {
        margin-bottom: 40px;
    }

        .logo h1,
        .logo h2 {
            margin: 30px 0 30px;
            text-align: left;
            font-size: 86px;
            line-height: 84px;
            font-weight: 500;
            letter-spacing: -5px;
        }

            .logo h1 span,
            .logo h2 span {
                font-weight: 300;
            }

            .logo h1 a,
            .logo h2 a {
                color: red;
                text-decoration: none;
                -webkit-transition: color 0.3s ease-in-out, text-decoration 0.5s ease-in-out;
                -moz-transition: color 0.3s ease-in-out, text-decoration 0.5s ease-in-out;
                -ms-transition: color 0.3s ease-in-out, text-decoration 0.5s ease-in-out;
                -o-transition: color 0.3s ease-in-out, text-decoration 0.5s ease-in-out;
                transition: color 0.3s ease-in-out, text-decoration 0.5s ease-in-out;
            }

                .logo h1 a:hover,
                .logo h2 a:hover {
                    color: whitesmoke;
                    text-decoration: underline;
                }

    .account {
        text-align: right;
    }

        .account a {
            color: #333;
            text-decoration: none;
        }

            .account a:hover {
                color: yellow;
                text-decoration: underline;
            }

        .account h4 {
            font-weight: 600;
            text-transform: uppercase;
            line-height: 20px;
            margin-bottom: 10px;
            cursor: pointer;
        }



    /* [4. NAV MENU]  this makes the line above the home buttons*/
    .nav-menus {
        border-top: 2px solid #333;
        padding-top: 10px;
        padding-bottom: 20px;
    }
</style>

